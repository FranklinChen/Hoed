CABAL_VER=`cabal --numeric-version | sed 's/\./ /g'`
MAJOR=`echo $CABAL_VER | awk '{print $1}'`
MINOR=`echo $CABAL_VER | awk '{print $2}'`
FLAGS="validateStk,validatePure,validateProp"

if [ "$MAJOR" -le "1" -a "$MINOR" -le "18" ]; then
  cabal --enable-executable-profiling --enable-library-profiling --disable-optimization  --flags="$FLAGS"
else
  cabal configure --enable-profiling --disable-optimization  --flags="validateStk" --flags="$FLAGS"
fi

cabal install --only-dependencies
cabal clean
